<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <h2 class="mb-3">Registro</h2>
            <form action="/api/v1/usuarios" method="POST">
                <div class="form-group">
                    <label for="nombre">nombre</label>
                    <input type="text" class="form-control" id="nombre" nombre="nombre" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" nombre="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="password" nombre="password" required>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Registrarse</button>
             <br>
           <button type="reset" align="center" class="btn btn-secondary mt-3 btn-lg">Limpiar</button> 
            </form>
        </div>
    </div>
</div>

<style>
    input{
        display:block;
        width: 100%;
    }

    form{
          width: 400px;
    margin: auto;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  const form = document.querySelector('form');
  form.addEventListener('submit', async (event) => {
    event.preventDefault();

    const name = document.querySelector('#nombre').value;
    const email = document.querySelector('#email').value;
    const password = document.querySelector('#password').value;

    try {
      const response = await axios.post('/api/v1/usuarios', { name, email, password });

      if (response.status === 201) {
        // Usuario creado exitosamente
        alert('Usuario creado con éxito');
        window.location.href = '/login'; // Cambia '/login' por la ruta correcta a la página de inicio de sesión
      } else {
        // Ocurrió un error al crear el usuario
        alert('Error al crear el usuario. Por favor, inténtalo de nuevo.');
      }
    } catch (error) {
      // Error en la solicitud
      console.error(error);
      alert('Error al crear el usuario. Por favor, inténtalo de nuevo.');
    }
  });
</script>

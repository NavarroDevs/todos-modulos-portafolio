<h2 class="text-center mt-3">Top Libros mundiales</h2>

<br>


{{!-- realizacion de un carrusel usando booptrap --}}
<main>
 <div id="carousel" class="carousel slide">
    <div class="carousel-inner" style="height: 400px;">
      <div class="carousel-item active">
        <img src="/public/img/carrusel5.jpeg" class="d-flex w-100 mr-auto ml-auto" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/public/img/carrusel1.jpg" class="d-block m-auto w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/public/img/carrusel2.png" class="d-block m-auto w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</main>



<h2 class="text-center mt-3">Ultimas Noticias de Libros mas Recientes</h2>

<section class="py-5">

    {{#if error}}
        <h2 class="text-center mt-2">{{error}}</h2>
    {{else}}
    <div class="row">
         {{#each publicaciones}}
                <div class="col-12 col-md-6 col-lg-4 mt-2">
                    {{>card
                    idPublicacion=this.id
                    imagen=this.imagen
                    titulo=this.titulo
                    contenido=this.contenido
                    fecha = this.fecha
                    autor = this.autor
                    }}
                </div>
        {{/each}}
    </div>
       
    {{/if}}

</section>

